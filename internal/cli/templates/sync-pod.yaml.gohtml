apiVersion: v1
kind: Pod
metadata:
  name: {{ quote .PodName }}
  namespace: {{ quote .Namespace }}
spec:
  restartPolicy: Never
  containers:
    - name: sync
      image: {{ quote .Image }}
      command: ["sh", "-c", "sleep 3600"]
      volumeMounts:
        - name: workspace
          mountPath: {{ quote .MountPath }}
  volumes:
    - name: workspace
      persistentVolumeClaim:
        claimName: {{ quote .PVCName }}
