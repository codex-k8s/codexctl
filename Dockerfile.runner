# syntax=docker/dockerfile:1.4

##
## Builder: build codexctl binary
##
FROM golang:1.22-bookworm AS builder

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/codexctl ./cmd/codexctl

##
## Runtime: generic runner image with kubectl, gh, jq, yq and codexctl
##
FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=UTC \
    PATH=/usr/local/bin:/usr/bin:/bin

RUN apt-get update -y \
  && apt-get install -y --no-install-recommends \
       ca-certificates curl wget gnupg lsb-release \
       git jq \
       python3 python3-pip \
       bash coreutils \
  && rm -rf /var/lib/apt/lists/*

# yq (YAML processor)
RUN wget -qO /usr/local/bin/yq "https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64" \
  && chmod +x /usr/local/bin/yq

# kubectl (version configurable via build arg)
ARG KUBECTL_VERSION=v1.34.1
RUN curl -fsSL -o /usr/local/bin/kubectl "https://dl.k8s.io/release/${KUBECTL_VERSION}/bin/linux/amd64/kubectl" \
  && chmod +x /usr/local/bin/kubectl

# GitHub CLI
RUN install -m 0755 -d /etc/apt/keyrings \
 && curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg \
      -o /etc/apt/keyrings/githubcli-archive-keyring.gpg \
 && chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg \
 && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" \
      | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
 && apt-get update -y \
 && apt-get install -y gh \
 && rm -rf /var/lib/apt/lists/*

# Copy codexctl binary
COPY --from=builder /out/codexctl /usr/local/bin/codexctl

WORKDIR /workspace

CMD ["bash", "-lc", "codexctl --help || sleep infinity"]

